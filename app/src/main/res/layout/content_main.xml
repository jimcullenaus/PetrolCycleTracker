<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
	<data>
		<variable
			name="recommendation"
			type="com.thejimcullen.petrolcycletracker.models.RecommendationState" />
	</data>
	<android.support.v4.widget.SwipeRefreshLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:id="@+id/main_refresh_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:context=".MainActivity"
		tools:showIn="@layout/app_bar_main">

		<ScrollView
			android:fillViewport="true"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin">

				<ProgressBar
					android:id="@+id/progress_meter"
					style="@style/Widget.AppCompat.Spinner"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:background="@null"
					android:visibility="gone"
					/>

				<TextView
					android:id="@+id/welcome_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="@string/welcome"
					android:visibility="gone" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/failed_text"
					android:text="@string/failure_text"
					android:visibility="gone" />

				<RelativeLayout
					android:id="@+id/main_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:visibility="visible">

					<include layout="@layout/cycle_information"
						android:id="@+id/cycle_information"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						bind:recommendation="@{recommendation}"/>

					<TextView
						android:id="@+id/copyright"
						android:layout_width="match_parent"
						android:layout_height="20dp"
						android:layout_alignParentBottom="true"
						android:layout_alignBottom="@id/cycle_information"
						android:textIsSelectable="false"
						android:autoSizeTextType="uniform"
						android:gravity="center_horizontal"
						android:text="@string/accc_copyright"
						android:visibility="visible"/>
				</RelativeLayout>
			</RelativeLayout>
		</ScrollView>

	</android.support.v4.widget.SwipeRefreshLayout>
</layout>
