<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
	<data>
		<variable
			name="recommendation"
			type="com.thejimcullen.petrolcycletracker.models.RecommendationState" />
	</data>
	<android.support.constraint.ConstraintLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="visible"
		>

		<TextView
			android:id="@+id/intro_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:text="@{recommendation.introText}"/>

		<TextView
			android:id="@+id/buying_recommendation"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/intro_text"
			app:layout_constraintTop_toBottomOf="@id/intro_text"
			android:text="@{recommendation.buyingRecommendation}"/>

		<ImageView
			android:id="@+id/price_graph"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@id/buying_recommendation"
			android:layout_marginBottom="@dimen/activity_vertical_margin"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:src="@drawable/sample_image"
			android:contentDescription="@string/image_description"
			app:layout_constraintTop_toBottomOf="@id/buying_recommendation"
			/>

		<TextView
			android:id="@+id/graph_info"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/price_graph"
			android:layout_marginBottom="30dp"
			app:layout_constraintTop_toBottomOf="@id/price_graph"
			android:text="@{recommendation.graphInfo}"/>

	</android.support.constraint.ConstraintLayout>
</layout>
